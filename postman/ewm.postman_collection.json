	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"exec": [
					"const baseUrl = pm.collectionVariables.get('base_url');\r",
					"\r",
					"const categorySchema = {\r",
					"    \"type\": \"object\",\r",
					"    \"properties\": {\r",
					"        \"id\": { \"type\": \"integer\" },\r",
					"        \"name\": { \"type\": \"string\" }\r",
					"    },\r",
					"    \"required\": [\"id\", \"name\"]\r",
					"};\r",
					"\r",
					"utils = {\r",
					"    validateResponse200StatusCodeAndJsonBody: (pm) => {\r",
					"        pm.test('Response should have 200 status code and JSON body', function () {\r",
					"            pm.response.to.have.status(200);\r",
					"            pm.response.to.have.jsonBody;\r",
					"        });\r",
					"    },\r",
					"\r",
					"    validateResponse201StatusCodeAndJsonBody: (pm) => {\r",
					"        pm.test('Response should have 201 status code and JSON body', function () {\r",
					"            pm.response.to.have.status(201);\r",
					"            pm.response.to.have.jsonBody;\r",
					"        });\r",
					"    },\r",
					"\r",
					"    validateResponse204StatusCode: (pm) => {\r",
					"        pm.test('Response should have 204 status code', function () {\r",
					"            pm.response.to.have.status(204);\r",
					"        });\r",
					"    },\r",
					"\r",
					"    validateCategorySchema: (pm) => {\r",
					"        pm.test(\"Response should have valid Category schema\", () => {\r",
					"            pm.response.to.have.jsonSchema(categorySchema);\r",
					"        });\r",
					"    },\r",
					"\r",
					"    buildCategory: (pm) => {\r",
					"        return {\r",
					"            name: pm.variables.replaceIn('{{$randomWord}}')\r",
					"        }\r",
					"    },\r",
					"\r",
					"    createCategory: (pm) => {\r",
					"        const postRequest = {\r",
					"            url: baseUrl + '/admin/categories',\r",
					"            method: 'POST',\r",
					"            header: {\r",
					"                'Content-Type': 'application/json'\r",
					"            },\r",
					"            body: {\r",
					"                mode: 'raw',\r",
					"                raw: JSON.stringify(utils.buildCategory(pm))\r",
					"            }\r",
					"        };\r",
					"\r",
					"        pm.sendRequest(postRequest, (error, response) => {\r",
					"            if (error) {\r",
					"                console.error(error);\r",
					"            } else {\r",
					"                pm.collectionVariables.set('category_id', response.json().id);\r",
					"            }\r",
					"        });\r",
					"    }\r",
					"};\r",
					""
				]
			}
